<!-- Modal for Confirming Invoice Deletion -->
<div class="modal fade" id="deleteInvoiceModal" tabindex="-1" aria-labelledby="deleteInvoiceModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteInvoiceModalLabel">Delete Invoice</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the following invoice?</p>
                <div class="border p-3">
                    <p><strong>Invoice ID:</strong> <span id="deleteInvoiceId"></span></p>
                    <p><strong>Issue:</strong> <span id="deleteInvoiceIssue"></span></p>
                    <p><strong>Total Amount:</strong> <span id="deleteInvoiceTotalAmount"></span></p>
                    <p><strong>Status:</strong> <span id="deleteInvoiceStatus"></span></p>
                    <p><strong>Notes:</strong> <span id="deleteInvoiceNotes"></span></p> <!-- Add the Notes field -->
                </div>
                <input type="hidden" id="hiddenDeleteInvoiceId" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteInvoice">Delete</button>
            </div>
        </div>
    </div>
</div>
