@model List<Mekaniko_Secured.Models.Dto.InvoiceListDto>

<h2>Invoices</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Status</th>
            <th>Issue</th>
            <th>Invoice #</th>
            <th>Name</th>
            <th>Created</th>
            <th>Due Date</th>
            <th>Rego #</th>
            <th>Total</th>
            <th>Sent</th>
            <th>Action</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var invoice in Model)
        {
            <tr>
                <td>@invoice.IsPaid</td>
                <td>@invoice.IssueName</td>
                <td>@invoice.InvoiceId</td>
                <td>@invoice.CustomerName</td>
                <td>@invoice.DateAdded</td>
                <td>@invoice.DueDate</td>
                <td>@invoice.CarRego</td>
                <td>@invoice.TotalAmount</td>
                <td> <p></p> </td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="actionDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="visually-hidden">Toggle Dropdown</span>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="actionDropdown">
                            <li><a class="dropdown-item" href="#">Edit</a></li>
                            <li><a class="dropdown-item" href="#">Delete</a></li>
                        </ul>
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>